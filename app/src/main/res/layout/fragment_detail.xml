<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- آیکون اپلیکیشن -->
    <ImageView
        android:id="@+id/img_app_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/app_icon"
        android:src="@drawable/ic_launcher_foreground" />

    <!-- نام اپلیکیشن -->
    <TextView
        android:id="@+id/txt_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/img_app_icon"
        android:layout_marginStart="16dp"
        android:layout_alignTop="@id/img_app_icon"
        android:text="App Name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <!-- توضیحات کامل اپلیکیشن -->
    <TextView
        android:id="@+id/txt_full_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_app_icon"
        android:layout_marginTop="16dp"
        android:text="Full description of the app goes here."
        android:textSize="16sp"
        android:textColor="@android:color/black" />

</RelativeLayout>
